{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for all windows",
  "windows": [
    "main",
    "settings"
  ],
  "permissions": [
    "core:default",
    "core:event:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    "drag:default"
  ]
}